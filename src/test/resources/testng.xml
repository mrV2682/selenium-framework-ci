<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Selenium Framework Suite"
       parallel="classes"
       thread-count="2">

    <listeners>
        <listener class-name="listeners.TestListener"/>
        <listener class-name="retry.RetryTransformer"/>
    </listeners>

    <test name="API Tests">
        <groups>
            <run>
                <include name="api"/>
            </run>
        </groups>
        <classes>
            <class name="api.tests.UserApiTest"/>
        </classes>
    </test>

    <test name="UI Tests">
        <groups>
            <run>
                <include name="ui"/>
            </run>
        </groups>
        <classes>
            <class name="ui.tests.BingSearchTest"/>
            <class name="ui.tests.BingTitleTest"/>
        </classes>
    </test>

</suite>
